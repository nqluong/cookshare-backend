# ============================================
# Database Configuration
# ============================================
POSTGRES_DB=cookshare_db
POSTGRES_USER=cookshare_user
POSTGRES_PASSWORD=change_this_secure_password
DATABASE_PORT=5432

# ============================================
# Backend Configuration
# ============================================
BACKEND_PORT=8080

# ============================================
# Admin Credentials
# ============================================
USERNAME_ADMIN=admin
PASSWORD_ADMIN=change_this_admin_password

# ============================================
# JWT Configuration
# ============================================
JWT_SECRET=your_base64_encoded_jwt_secret_key_here_minimum_256_bits

# ============================================
# Email Configuration (Gmail SMTP)
# ============================================
USERNAME_MAIL=your-email@gmail.com
PASSWORD_MAIL=your_gmail_app_password

# ============================================
# OAuth2 - Google Configuration
# ============================================
GG_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GG_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8080/login/oauth2/code/google

# ============================================
# OAuth2 - Facebook Configuration
# ============================================
FB_CLIENT_ID=your-facebook-app-id
FB_CLIENT_SECRET=your-facebook-app-secret
FACEBOOK_REDIRECT_URI=http://localhost:8080/login/oauth2/code/facebook

# ============================================
# Firebase Configuration
# ============================================
FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com

# ============================================
# WebSocket Configuration
# ============================================
WEBSOCKET_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:4200

# ============================================
# SSL/TLS Configuration (Optional)
# ============================================
SSL_ENABLED=false
SSL_KEYSTORE_PATH=
SSL_KEYSTORE_PASSWORD=
SSL_KEYSTORE_TYPE=PKCS12
SSL_KEY_ALIAS=

# ============================================
# HTTP/2 Configuration (Optional)
# ============================================
HTTP2_ENABLED=false

# ============================================
# pgAdmin Configuration (Optional)
# ============================================
PGADMIN_PORT=5050
PGADMIN_EMAIL=admin@cookshare.com
PGADMIN_PASSWORD=admin
